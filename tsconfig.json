{
    "compilerOptions": {
        "target": "es2017",
        "outDir": "dist",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
    "include": [
        "src/**/*.ts", 
        "server.ts"
    ]
}